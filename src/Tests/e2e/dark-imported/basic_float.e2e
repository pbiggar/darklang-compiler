// ===================================================================
// Basic Float Literals
// ===================================================================

1.0 = stdout="1.00\n"
3.14 = stdout="3.14\n"
0.5 = stdout="0.50\n"
-1.5 = stdout="-1.50\n"

// ===================================================================
// Float Arithmetic
// ===================================================================

1.5 + 2.5 = stdout="4.00\n"
3.14 * 2.0 = stdout="6.28\n"
10.0 / 4.0 = stdout="2.50\n"
5.5 - 2.5 = stdout="3.00\n"

// ===================================================================
// Float Comparisons
// ===================================================================

1.5 < 2.5 = stdout="true\n"
2.5 > 1.5 = stdout="true\n"
1.5 == 1.5 = stdout="true\n"
1.5 != 2.5 = stdout="true\n"
1.5 <= 1.5 = stdout="true\n"
2.5 >= 2.5 = stdout="true\n"

// ===================================================================
// Float in Let Bindings
// ===================================================================

let x = 1.5 in x + 2.5 = stdout="4.00\n"
let pi = 3.14 in pi * 2.0 = stdout="6.28\n"

// ===================================================================
// Float in Conditionals
// ===================================================================

if 1.5 < 2.5 then 1 else 0 = 1
if 2.5 > 1.5 then 1 else 0 = 1

