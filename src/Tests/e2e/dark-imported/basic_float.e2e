3.14 = 3.14
0.5 = 0.50
-1.5 = -1.50

// ===================================================================
// Float Arithmetic
// ===================================================================

1.5 + 2.5 = 4.00
3.14 * 2.0 = 6.28
10.0 / 4.0 = 2.50
5.5 - 2.5 = 3.00

// ===================================================================
// Float Comparisons
// ===================================================================

1.5 < 2.5 = true
2.5 > 1.5 = true
1.5 == 1.5 = true
1.5 != 2.5 = true
1.5 <= 1.5 = true
2.5 >= 2.5 = true

// ===================================================================
// Float in Let Bindings
// ===================================================================

let x = 1.5 in x + 2.5 = 4.00
let pi = 3.14 in pi * 2.0 = 6.28

// ===================================================================
// Float in Conditionals
// ===================================================================

if 1.5 < 2.5 then 1 else 0 = 1
if 2.5 > 1.5 then 1 else 0 = 1

