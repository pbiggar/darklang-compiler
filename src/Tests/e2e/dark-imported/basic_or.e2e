// ===================================================================
// Basic OR operations
// ===================================================================

(true || true) = stdout="true\n"
(true || false) = stdout="true\n"
(false || true) = stdout="true\n"
(false || false) = stdout="false\n"

// ===================================================================
// Short-circuit and type error tests
// ===================================================================

// Short-circuit: true || anything = true (even with wrong type)
// (true || 5) = stdout="true\n"

// Type error - wrong type for second operand (when first is false)
// (false || 5) = Builtin.testDerrorMessage "|| only supports Booleans"

// Type error - wrong type for first operand
// (5 || true) = Builtin.testDerrorMessage "|| only supports Booleans"

// ===================================================================
// Pipe operator with OR
// ===================================================================

(true |> (||) true) = stdout="true\n"
(true |> (||) false) = stdout="true\n"
(false |> (||) true) = stdout="true\n"
(false |> (||) false) = stdout="false\n"
