// Stdlib.Char Tests
// Tests for Char module functions

// ===================================================================
// Char.isDigit - Check if character is digit (0-9)
// ===================================================================

Char.isDigit("0") = true
Char.isDigit("5") = true
Char.isDigit("9") = true
Char.isDigit("a") = false
Char.isDigit("A") = false
Char.isDigit(" ") = false
Char.isDigit("") = false

// ===================================================================
// Char.isLetter - Check if character is letter (a-z, A-Z)
// ===================================================================

Char.isLetter("a") = true
Char.isLetter("z") = true
Char.isLetter("A") = true
Char.isLetter("Z") = true
Char.isLetter("0") = false
Char.isLetter(" ") = false
Char.isLetter("") = false

// ===================================================================
// Char.isWhitespace - Check if character is whitespace
// ===================================================================

Char.isWhitespace(" ") = true
Char.isWhitespace("\t") = true
Char.isWhitespace("\n") = true
Char.isWhitespace("a") = false
Char.isWhitespace("0") = false
Char.isWhitespace("") = false

// ===================================================================
// Char.isUppercase - Check if character is uppercase (A-Z)
// ===================================================================

Char.isUppercase("A") = true
Char.isUppercase("Z") = true
Char.isUppercase("a") = false
Char.isUppercase("z") = false
Char.isUppercase("0") = false
Char.isUppercase("") = false

// ===================================================================
// Char.isLowercase - Check if character is lowercase (a-z)
// ===================================================================

Char.isLowercase("a") = true
Char.isLowercase("z") = true
Char.isLowercase("A") = false
Char.isLowercase("Z") = false
Char.isLowercase("0") = false
Char.isLowercase("") = false

// ===================================================================
// Char.isAlphanumeric - Check if character is alphanumeric
// ===================================================================

Char.isAlphanumeric("a") = true
Char.isAlphanumeric("Z") = true
Char.isAlphanumeric("5") = true
Char.isAlphanumeric(" ") = false
Char.isAlphanumeric("!") = false
Char.isAlphanumeric("") = false

// ===================================================================
// Char.toUppercase - Convert to uppercase
// ===================================================================

Char.toUppercase("a") = "A"
Char.toUppercase("z") = "Z"
Char.toUppercase("A") = "A"
Char.toUppercase("5") = 5
Char.toUppercase("") = ""

// ===================================================================
// Char.toLowercase - Convert to lowercase
// ===================================================================

Char.toLowercase("A") = a
Char.toLowercase("Z") = z
Char.toLowercase("a") = a
Char.toLowercase("5") = 5
Char.toLowercase("") = ""

// ===================================================================
// Char.toCode - Get codepoint value
// ===================================================================

Char.toCode("A") = 65
Char.toCode("a") = 97
Char.toCode("0") = 48
Char.toCode(" ") = 32
Char.toCode("") = 0

// ===================================================================
// Char.fromCode - Create character from codepoint
// ===================================================================

Char.fromCode(65) = "A"
Char.fromCode(97) = a
Char.fromCode(48) = 0
Char.fromCode(32) = " "
