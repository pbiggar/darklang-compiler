// Stdlib.Tuple3 Tests
// Ported from https://github.com/darklang/dark/tree/main/backend/testfiles/execution/stdlib
//
// Tests for Tuple3 module functions

// ===================================================================
// Stdlib.Tuple3.create - Constructs a triple from three values
// ===================================================================

Tuple3.first(Tuple3.create(1, 2, 3)) = 1
Tuple3.second(Tuple3.create(1, 2, 3)) = 2
Tuple3.third(Tuple3.create(1, 2, 3)) = 3

// ===================================================================
// Stdlib.Tuple3.first - Returns the first value of a triple
// ===================================================================

Tuple3.first((1, 2, 3)) = 1
Tuple3.first((42, 0, 99)) = 42
Tuple3.first((true, false, true)) = true

// ===================================================================
// Stdlib.Tuple3.second - Returns the second value of a triple
// ===================================================================

Tuple3.second((1, 2, 3)) = 2
Tuple3.second((0, 42, 99)) = 42

// ===================================================================
// Stdlib.Tuple3.third - Returns the third value of a triple
// ===================================================================

Tuple3.third((1, 2, 3)) = 3
Tuple3.third((0, 0, 42)) = 42

// ===================================================================
// Stdlib.Tuple3.mapFirst - Transform the first value in a triple
// ===================================================================

Tuple3.first(Tuple3.mapFirst((x: Int64) => x + 1, (5, 10, 15))) = 6
Tuple3.second(Tuple3.mapFirst((x: Int64) => x + 1, (5, 10, 15))) = 10
Tuple3.third(Tuple3.mapFirst((x: Int64) => x + 1, (5, 10, 15))) = 15

// ===================================================================
// Stdlib.Tuple3.mapSecond - Transform the second value in a triple
// ===================================================================

Tuple3.first(Tuple3.mapSecond((x: Int64) => x + 1, (5, 10, 15))) = 5
Tuple3.second(Tuple3.mapSecond((x: Int64) => x + 1, (5, 10, 15))) = 11
Tuple3.third(Tuple3.mapSecond((x: Int64) => x + 1, (5, 10, 15))) = 15

// ===================================================================
// Stdlib.Tuple3.mapThird - Transform the third value in a triple
// ===================================================================

Tuple3.first(Tuple3.mapThird((x: Int64) => x + 1, (5, 10, 15))) = 5
Tuple3.second(Tuple3.mapThird((x: Int64) => x + 1, (5, 10, 15))) = 10
Tuple3.third(Tuple3.mapThird((x: Int64) => x + 1, (5, 10, 15))) = 16

// ===================================================================
// Stdlib.Tuple3.mapAllThree - Transform all three values in a triple
// ===================================================================

Tuple3.first(Tuple3.mapAllThree((x: Int64) => x + 1, (y: Int64) => y * 2, (z: Int64) => z - 1, (5, 10, 15))) = 6
Tuple3.second(Tuple3.mapAllThree((x: Int64) => x + 1, (y: Int64) => y * 2, (z: Int64) => z - 1, (5, 10, 15))) = 20
Tuple3.third(Tuple3.mapAllThree((x: Int64) => x + 1, (y: Int64) => y * 2, (z: Int64) => z - 1, (5, 10, 15))) = 14
