// Stdlib.Option Tests
// Ported from https://github.com/darklang/dark/tree/main/backend/testfiles/execution/stdlib
//
// Tests for Option module functions

// ===================================================================
// Option.isSome - Returns true if the option is Some
// ===================================================================

Option.isSome(Option.Some(5)) = true
// Unresolved type variable is defaulted to Int64 during monomorphization
Option.isSome(Option.None) = false

// ===================================================================
// Option.isNone - Returns true if the option is None
// ===================================================================

Option.isNone(Option.Some(5)) = false
// Unresolved type variable is defaulted to Int64 during monomorphization
Option.isNone(Option.None) = true

// ===================================================================
// Option.withDefault - Returns the value or a default
// ===================================================================

Option.withDefault(Option.Some(5), 0) = 5
Option.withDefault(Option.None, 42) = 42

// ===================================================================
// Option.map - Apply a function to the value if Some
// ===================================================================

Option.withDefault(Option.map(Option.Some(5), (x: Int64) => x + 1), 0) = 6
Option.isNone(Option.map(Option.None, (x: Int64) => x + 1)) = true

// ===================================================================
// Option.andThen - Chain Option computations
// ===================================================================

Option.withDefault(Option.andThen(Option.Some(5), (x: Int64) => Option.Some(x * 2)), 0) = 10
Option.isNone(Option.andThen(Option.None, (x: Int64) => Option.Some(x * 2))) = true
// NOTE: Needs type params because the lambda returns None which doesn't constrain the output type
Option.isNone(Option.andThen<Int64, Int64>(Option.Some(5), (x: Int64) => Option.None)) = true

// ===================================================================
// Option.toList - Convert to a list
// ===================================================================

List.length(Option.toList(Option.Some(42))) = 1
List.isEmpty(Option.toList(Option.None)) = true

// ===================================================================
// Pipe operator with Option functions
// ===================================================================

Option.Some(42) |> Option.isSome() = true
Option.None |> Option.isNone() = true
Option.Some(10) |> Option.map((x: Int64) => x * 2) |> Option.withDefault(0) = 20

// ===================================================================
// Unresolved type variable resolved later by context
// Tests that type variables unify correctly with all types
// ===================================================================

// Int64
let x = Option.None in Option.withDefault(x, 42) = 42

// String
let x = Option.None in Option.withDefault(x, "hello") = hello

// Bool
let x = Option.None in Option.withDefault(x, true) = true

// Float64
let x = Option.None in Option.withDefault(x, 3.14) = 3.14

// Char
let x = Option.None in Option.withDefault(x, 'a') = a

// Unit
let x = Option.None in Option.withDefault(x, ()) = ()

// Int8
let x = Option.None in Option.withDefault(x, 42y) = 42

// Int16
let x = Option.None in Option.withDefault(x, 42s) = 42

// Int32
let x = Option.None in Option.withDefault(x, 42l) = 42

// UInt8
let x = Option.None in Option.withDefault(x, 42uy) = 42

// UInt16
let x = Option.None in Option.withDefault(x, 42us) = 42

// UInt32
let x = Option.None in Option.withDefault(x, 42ul) = 42

// UInt64
let x = Option.None in Option.withDefault(x, 42UL) = 42

// Tuple
let x = Option.None in Option.withDefault(x, (1, 2)) = (1, 2)

// Tuple3
let x = Option.None in Option.withDefault(x, (1, 2, 3)) = (1, 2, 3)

// List
let x = Option.None in List.length(Option.withDefault(x, [1, 2, 3])) = 3

// Nested Option (Option<Option<Int64>>)
let x = Option.None in Option.isSome(Option.withDefault(x, Option.Some(42))) = true

// Result
let x = Option.None in Result.isOk(Option.withDefault(x, Result.Ok(42))) = true

