// Stdlib.Bool Tests
// Ported from https://github.com/darklang/dark/tree/main/backend/testfiles/execution/stdlib
//
// Tests for Bool module functions

// ===================================================================
// Bool.not - Returns the inverse of a boolean
// ===================================================================

Bool.not(true) = stdout="false\n"
Bool.not(false) = stdout="true\n"

// With variable
let b = true in Bool.not(b) = stdout="false\n"
let b = false in Bool.not(b) = stdout="true\n"

// Double not
Bool.not(Bool.not(true)) = stdout="true\n"
Bool.not(Bool.not(false)) = stdout="false\n"

// ===================================================================
// Bool.and - Returns true if both a and b are true
// ===================================================================

Bool.and(true, true) = stdout="true\n"
Bool.and(true, false) = stdout="false\n"
Bool.and(false, true) = stdout="false\n"
Bool.and(false, false) = stdout="false\n"

// With expressions
Bool.and(8 >= 5, 6 <= 8) = stdout="true\n"
Bool.and(1 > 5, 2 < 8) = stdout="false\n"

// ===================================================================
// Bool.or - Returns true if either a or b is true
// ===================================================================

Bool.or(true, true) = stdout="true\n"
Bool.or(true, false) = stdout="true\n"
Bool.or(false, true) = stdout="true\n"
Bool.or(false, false) = stdout="false\n"

// ===================================================================
// Bool.xor - Returns true if exactly one of a and b is true
// ===================================================================

Bool.xor(true, true) = stdout="false\n"
Bool.xor(true, false) = stdout="true\n"
Bool.xor(false, true) = stdout="true\n"
Bool.xor(false, false) = stdout="false\n"

// ===================================================================
// Bool.toString - Convert bool to string
// Already tested in strings.e2e, but including here for completeness
// ===================================================================

Bool.toString(true) = stdout="true\n"
Bool.toString(false) = stdout="false\n"
