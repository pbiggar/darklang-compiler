// Boolean Tests - Boolean literals, comparisons, and logical operations
//
// Tests covering:
// - Boolean literals
// - Integer comparisons
// - Boolean operations (&&, ||, !)
// - Let bindings with booleans


// ===================================================================
// Boolean Literals
// ===================================================================
// Boolean literals print as "true" and "false"
true = true
false = false


// ===================================================================
// Integer Comparisons
// ===================================================================

// Equality
1 == 1 = true
1 == 2 = false
5 == 5 = true
0 == 0 = true
42 == 42 = true

// Inequality
1 != 2 = true
5 != 5 = false
0 != 1 = true
42 != 0 = true

// Less than
1 < 2 = true
2 < 1 = false
5 < 5 = false
0 < 1 = true
10 < 20 = true

// Greater than
2 > 1 = true
1 > 2 = false
5 > 5 = false
20 > 10 = true

// Less than or equal
1 <= 2 = true
2 <= 2 = true
3 <= 2 = false
5 <= 10 = true

// Greater than or equal
2 >= 1 = true
2 >= 2 = true
1 >= 2 = false
10 >= 5 = true


// ===================================================================
// Boolean Operations
// ===================================================================

// AND (&&)
true && true = true
true && false = false
false && true = false
false && false = false

// OR (||)
true || true = true
true || false = true
false || true = true
false || false = false

// NOT (!)
!true = false
!false = true
!!true = true
!!false = false


// ===================================================================
// Combined Comparisons and Boolean Operations
// ===================================================================

// Comparisons with boolean operators
1 == 1 && 2 == 2 = true
1 == 1 && 1 == 2 = false
1 == 2 || 2 == 2 = true
1 == 2 || 3 == 4 = false

// Negated comparisons
!(1 == 1) = false
!(1 == 2) = true
!(5 < 3) = true
!(5 > 3) = false


// ===================================================================
// Let Bindings with Booleans
// ===================================================================

let x = true in x = true
let x = false in x = false
let x = 1 == 1 in x = true
let x = 1 == 2 in x = false
let x = 5 < 10 in x = true

// Multiple let bindings
let x = true in let y = false in x && y = false
let x = true in let y = false in x || y = true
let x = 1 < 2 in let y = 3 > 2 in x && y = true

// Boolean operations in let values
let x = true && false in x = false
let x = true || false in x = true
let x = !true in x = false
let x = !(1 == 2) in x = true


// ===================================================================
// Complex Expressions
// ===================================================================

// Nested boolean operations
(true || false) && true = true
true && (false || true) = true
(true && false) || (true && true) = true

// Comparisons with arithmetic
1 + 1 == 2 = true
3 * 4 == 12 = true
10 - 5 == 5 = true
8 / 2 == 4 = true

// More complex
(1 + 2) < (4 + 5) = true
(10 - 3) > (2 * 2) = true
(6 / 2) == 3 = true

// Negation with arithmetic
!(5 + 5 == 11) = true
!(3 * 3 == 9) = false
