// Boolean Tests - Boolean literals, comparisons, and logical operations
//
// Tests covering:
// - Boolean literals
// - Integer comparisons
// - Boolean operations (&&, ||, !)
// - Let bindings with booleans


// ===================================================================
// Boolean Literals
// ===================================================================
// Boolean literals print as "true" and "false"
true = stdout="true\n"
false = stdout="false\n"


// ===================================================================
// Integer Comparisons
// ===================================================================

// Equality
1 == 1 = stdout="true\n"
1 == 2 = stdout="false\n"
5 == 5 = stdout="true\n"
0 == 0 = stdout="true\n"
42 == 42 = stdout="true\n"

// Inequality
1 != 2 = stdout="true\n"
5 != 5 = stdout="false\n"
0 != 1 = stdout="true\n"
42 != 0 = stdout="true\n"

// Less than
1 < 2 = stdout="true\n"
2 < 1 = stdout="false\n"
5 < 5 = stdout="false\n"
0 < 1 = stdout="true\n"
10 < 20 = stdout="true\n"

// Greater than
2 > 1 = stdout="true\n"
1 > 2 = stdout="false\n"
5 > 5 = stdout="false\n"
20 > 10 = stdout="true\n"

// Less than or equal
1 <= 2 = stdout="true\n"
2 <= 2 = stdout="true\n"
3 <= 2 = stdout="false\n"
5 <= 10 = stdout="true\n"

// Greater than or equal
2 >= 1 = stdout="true\n"
2 >= 2 = stdout="true\n"
1 >= 2 = stdout="false\n"
10 >= 5 = stdout="true\n"


// ===================================================================
// Boolean Operations
// ===================================================================

// AND (&&)
true && true = stdout="true\n"
true && false = stdout="false\n"
false && true = stdout="false\n"
false && false = stdout="false\n"

// OR (||)
true || true = stdout="true\n"
true || false = stdout="true\n"
false || true = stdout="true\n"
false || false = stdout="false\n"

// NOT (!)
!true = stdout="false\n"
!false = stdout="true\n"
!!true = stdout="true\n"
!!false = stdout="false\n"


// ===================================================================
// Combined Comparisons and Boolean Operations
// ===================================================================

// Comparisons with boolean operators
1 == 1 && 2 == 2 = stdout="true\n"
1 == 1 && 1 == 2 = stdout="false\n"
1 == 2 || 2 == 2 = stdout="true\n"
1 == 2 || 3 == 4 = stdout="false\n"

// Negated comparisons
!(1 == 1) = stdout="false\n"
!(1 == 2) = stdout="true\n"
!(5 < 3) = stdout="true\n"
!(5 > 3) = stdout="false\n"


// ===================================================================
// Let Bindings with Booleans
// ===================================================================

let x = true in x = stdout="true\n"
let x = false in x = stdout="false\n"
let x = 1 == 1 in x = stdout="true\n"
let x = 1 == 2 in x = stdout="false\n"
let x = 5 < 10 in x = stdout="true\n"

// Multiple let bindings
let x = true in let y = false in x && y = stdout="false\n"
let x = true in let y = false in x || y = stdout="true\n"
let x = 1 < 2 in let y = 3 > 2 in x && y = stdout="true\n"

// Boolean operations in let values
let x = true && false in x = stdout="false\n"
let x = true || false in x = stdout="true\n"
let x = !true in x = stdout="false\n"
let x = !(1 == 2) in x = stdout="true\n"


// ===================================================================
// Complex Expressions
// ===================================================================

// Nested boolean operations
(true || false) && true = stdout="true\n"
true && (false || true) = stdout="true\n"
(true && false) || (true && true) = stdout="true\n"

// Comparisons with arithmetic
1 + 1 == 2 = stdout="true\n"
3 * 4 == 12 = stdout="true\n"
10 - 5 == 5 = stdout="true\n"
8 / 2 == 4 = stdout="true\n"

// More complex
(1 + 2) < (4 + 5) = stdout="true\n"
(10 - 3) > (2 * 2) = stdout="true\n"
(6 / 2) == 3 = stdout="true\n"

// Negation with arithmetic
!(5 + 5 == 11) = stdout="true\n"
!(3 * 3 == 9) = stdout="false\n"
